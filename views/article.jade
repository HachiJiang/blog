//- layout template of single article

article(class='article')
  header(class='article-header')
    h2(class='article-title')
      a(href=article_href) article_title
    div(class='article_meta')
      span(class='article_date_created')
        a article_date_created
      span(class='article_date_modified')
        a article_date_modified

  div(class='article-content') article_content
  p article_date_modified
  footer(class='article-footer')
    span(class='cat_links')
      a article_category
    span(class='tags_links')
      a article_tags