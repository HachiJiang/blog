div(class='content-pagination')
  nav
    if (pageTotal > 0)
      ul(class='pagination')
        li(class='key-previous')
          a(href='#', aria-label='Previous')
            span(aria-hidden='true') &laquo;
        - var i = 1
        while i <= pageTotal
          if (i !== curPageIdx)
            li(class='pagi-item')
              a(href='#')= i++
          else
            li(class='active pagi-item')
              a(href='#')= i++
        li(class='key-next')
          a(href='#', aria-label='Next')
            span(aria-hidden='true') &raquo;