//- template of single article

article(class='article')&attributes({'id': 'article-' + article.article_id})
  header(class='article-header')
    h1(class='article-title')
      a(href='#') #{article.article_title}
    div(class='article-meta')
      span(class='article-author') 作者:
        a(href='#') #{article.user_name}
      span  · 
      span(class='article-created-on')
        a
          time(class='article-date-created')
          time(class='updated')&attributes({'datetime': article.article_date_created}) #{article.article_date_created}

  div(class='article-content') #{article.article_content}
  div(class='article-permalink')
    a(href='#', class='btn btn-default') 阅读全文
  footer(class='article-footer')
    span(class='cat-links')
      a #{article.article_category}
    div(class='pull-left tag-list')
      i(class='fa fa-footer clearfix')
      a(href='#')
    span(class='tag-links')
      a #{article.article_tags}
