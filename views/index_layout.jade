//- layout template of home page

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= blog_title + ' - ' + blog_desc
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')
        
  body
    // site-top
    nav(id='site-navigation',class='site-top navbar navbar-default navbar-static-top')
      div(class='container')
        div(class='navbar-header')
          button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#site-navbar', aria-expanded='false', aria-controls='navbar')
            span(class='sr-only') Toggle navigation
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='navbar-brand', href='#') Web小窝

        div(id='site-navbar', class='collapse navbar-collapse')
          ul(class='nav navbar-nav')
            li(class='active')
              a(href='#') 首页
                span(class='sr-only') (current)
            li
              a(href='#') 头脑风暴
            li
              a(href='#') About ME
          ul(class="nav navbar-nav navbar-right")
            li
              form(class='nav navbar-form navbar-right', role='search')
                div(class='form-group')
                  input(type='text', class='form-control', placeholder='Search')
            li
              a(href='#') Sign in
            
    // site header
    header(class='site-header jumbotron')
      div(class='container')
        h1(class='site-title')= blog_title
        h4(class='site-description')= blog_desc

    // content
    div(id='content' class='site-content')
      div(class='container')
        div(class='row')
          div(id='primary' class='col-md-9 content-area') main
            block content
          div(id='sidebar' class='col-md-3 widget-area')
            aside(class='widget')
              h3(class='widget-title') 分类
              ul
                li(class='widget-item') 生活点滴
            aside(class='widget')
              h3(class='widget-title') 存档页
              ul
                li(class='widget-item') 2015年11月
            aside(class='widget')
              h3(class='widget-title') 标签
              ul
                li(class='widget-item') Java
            aside(class='widget')
              h3(class='widget-title') 最新评论
            aside(class='widget')
              h3(class='widget-title') 博客统计
            aside(class='widget')
              h3(class='widget-title') 链接
              ul
                li(class='widget-item') swordarchor@gmail.com
                li(class='widget-item') https://github.com/HachiJiang
            

    // site footer
    footer(class='site-footer')
      div(class='container')
        p Swordarchor - 在前端开发与测试的路上
              //- li Email: swordarchor@gmail.com
              //- li GitHub: https://github.com/HachiJiang