//- entry page of home

extends ./includes/layout

block links
  link(rel='stylesheet', href='/stylesheets/highlights/monokai_sublime.css')
  link(rel='stylesheet', href='/stylesheets/home.css')
block content
  //- body content of home page
  //- site-top
  nav(id='site-navigation',class='site-top navbar navbar-default navbar-static-top')
    div(class='container')
      div(class='navbar-header')
        button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#site-navbar', aria-expanded='false', aria-controls='navbar')
          span(class='sr-only') Toggle navigation
          span(class='icon-bar')
          span(class='icon-bar')
          span(class='icon-bar')
        a(class='navbar-brand', href='#') Web小窝

      div(id='site-navbar', class='collapse navbar-collapse')
        ul(class='nav navbar-nav')
          li(class='active')
            a(href='#') 首页
              span(class='sr-only') (current)
          li
            a(href='#') 头脑风暴
          li
            a(href='#') About ME
        ul(class="nav navbar-nav navbar-right")
          li
            form(class='nav navbar-form navbar-right', role='search')
              div(class='form-group')
                input(type='text', class='form-control', placeholder='Search')
          li
            a(type='button', class='modal-title', data-toggle='modal', data-target='#login', href='#') Sign in
          
  //- site header
  header(class='site-header jumbotron')
    div(class='container')
      h1(class='site-title')= title
      h4(class='site-description')= desc

  //- content
  section(id='content' class='site-content')
    div(class='container')
      div(class='row')
        div(id='primary' class='col-md-9 content-area')
          div(id='content-wrap')
            if article_list
              for articleObj in article_list
                - var article = articleObj
                 include ./includes/article.jade
          div(id='content-pagination')
            nav
              ul(class='pagination')
                li(class='disabled')
                  a(href='#', aria-label='Previous')
                    span(aria-hidden='true') &laquo;
                li(class='active')
                  a(href='#') 1
                li(class='disabled')
                  a(href='#', aria-label='Next')
                    span(aria-hidden='true') &raquo;
        div(id='secondary', class='col-md-3 sidebar widget-area')
          //- if widgetsInfo
          //-   - var widgets = widgetsInfo
          include ./includes/widgets.jade

  //- site footer
  footer(class='site-footer')
    div(class='container')
      p Copyright (c) Swordarchor - 在前端开发的路上.

  div(id='login', class='modal fade', tagindex='-1', role='dialog', aria-labelledby='login-label' aria-hidden='true')
    div(class='modal-dialog modal-sm')
      div(class='modal-content')
        div(class='modal-header')
          button(type='button', class='close', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
          p(id='warning-msg', class='text-warninng')
          h4(id='login-label', class='modal-title') Sign In
        div(class='modal-body')
          input(id='login-username', type='text', class='form-control', placeholder='Username...')
          input(id='login-password', type='text', class='form-control', placeholder='Password...')
        div(class='modal-footer')
          button(type='button', class='btn btn-default', data-dismiss='modal') Cancle
          button(type='button', class='btn btn-primary', id='login-submit') OK

  //- 弹出提醒是否删除文章窗口
  div(id='isDel', class='modal', tagindex='-1', role='dialog', aria-hidden='true')
    div(class='modal-dialog modal-xs')
      div(class='modal-content')
        div(class='modal-header')
          p 是否删除文章？
        div(class='modal-footer')
          button(type='button', class='btn btn-default', data-dismiss='modal') No
          button(type='button', class='btn btn-primary', id='del-submit') Yes
block scripts
  script(data-main='/javascripts/main', src='/javascripts/lib/require.js')